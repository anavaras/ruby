<%= form_with model:@article ,local:true do |form|%>
	<% if @article.errors.any?%>
		<div id="error">
			<h2>
				<%= pluralize(@article.errors.count,'error')%>
					Please fill the required values
			</h2>
			<ul>
				<% @article.errors.full_messages.each do |err|%>
					<li><%= err%></li>
				<%end%>
			</ul>
		</div>
	<%end%>
	<p>
		<%= form.label :title%> <br>
		<%= form.text_field :title%>
	</p>
	<p>
		<%= form.label :text%> <br>
		<%= form.text_area :text %>
	</p>
	<p>
		<%= form.submit%>
	</p>
<%end%>